{
    "name": "blog-api",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "start": "bun src/index.ts",
        "db:generate": "bun --bun run prisma generate",
        "db:migrate": "bun --bun run prisma migrate dev",
        "db:migrate:deploy": "bun --bun run prisma migrate deploy",
        "db:push": "bun --bun run prisma db push",
        "db:studio": "bun --bun run prisma studio"
    },
    "devDependencies": {
        "@types/bun": "^1.3.6",
        "@types/node": "^25.0.8",
        "@types/pg": "^8.16.0",
        "@vitest/coverage-v8": "^4.0.18",
        "prettier": "^3.7.4",
        "prisma": "^7.2.0",
        "vite-tsconfig-paths": "^6.0.5",
        "vitest": "^4.0.18",
        "vitest-mock-extended": "^3.1.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.7.6",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "@supabase/supabase-js": "^2.90.1",
        "better-auth": "^1.4.12",
        "hono": "^4.11.4",
        "pg": "8.16.3",
        "zod": "^4.3.5"
    }
}
